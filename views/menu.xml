<?xml version="1.0" encoding="utf-8"?>
<odoo>

#creating search view
<record id="view_hospital_patient_search" model= "ir.ui.view">
    <field name="name">hospital.patient.search</field>
    <field name="model">hospital.patient</field>
    <field name="arch" type="xml">
        <search>
            <field name="name" filter_domain="['|','|',('name','ilike',self),('gender','ilike',self),('bloodgroup','ilike',self)]"/>
            <field name="gender"/>
            <field name="age"/> 
            <field name="bloodgroup"/>
            <filter name="filter_male" string="Male" domain="[('gender','=','male')]"/>
            <filter name="filter_female" string="Female" domain="[('gender','=','female')]"/>
            <separator/>
            <filter name="filter_kids" string="Kids" domain="[('age','&lt;=',5)]"/>
            <group expand="1" string="Groby">
                <filter string="Gender" name="group_by_gender" context ="{'group_by':'gender'}"/>
            </group>
        </search>
    </field>
</record>
# creating form view
<record id="view_hospital_patient_form" model= "ir.ui.view">
    <field name="name">hospital.patient.form</field>
    <field name="model">hospital.patient</field>
    <field name="arch" type="xml">

        
        <form>
            <sheet>
                <group>
                    <group>
                        <field name ="name"/>
                        <field name="gender"/>
                        <field name="bloodgroup"/>
                    </group>
                    <group>
                        <field name ="age"/>
                        <field name="address"/>
                    </group>
                    
                    
                </group>
            </sheet>
        </form>
        
    </field>
</record>

#create tree view
<record id="view_hospital_patient_tree" model= "ir.ui.view">
    <field name="name">hospital.patient.tree</field>
    <field name="model">hospital.patient</field>
    <field name="arch" type="xml">
        <tree expand="1">
            <field name="name"/>
            <field name="gender"/>
            <field name="age"/>
            <field name="bloodgroup"/>
        </tree>


    </field>
</record>
#create kanban view
<record id="view_hospital_patient_kanban" model= "ir.ui.view">
    <field name="name">hospital.patient.kanban</field>
    <field name="model">hospital.patient</field>
    <field name="arch" type="xml">
        <kanban>
            <field name="id"/>
            <field name="name"/>
            <field name="age"/>
            <field name="gender"/>
            <field name="address"/>
            <field name="bloodgroup"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <ul>
                                    <li>
                                        Name:<field name="age"/>
                                    </li>
                                    <li>
                                        Age:<field name="age"/>
                                    </li>
                                    <li>
                                        Gender:<field name="gender"/>
                                    </li>
                                    <li>
                                        Address:<field name="address"/>
                                    </li>
                                    <li>
                                        Blood group<field name="bloodgroup"/>
                                    </li>
                                </ul> 
                            </div>    
                        </div> 
                    </t> 
                </templates>
        </kanban>
    </field>
</record>

#creating window action
<record id="action_hospital" model="ir.actions.act_window">
        <field name="name">patients</field>
        <field name="res_model">hospital.patient</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Enter patient details
            </p>
        </field>
    </record>
#creating  menu
    <menuitem id = "hospital_main_menu"
            name = "Hospital"
            sequence = "4"/>
#creating submenu
    <menuitem id = "patient_details_menu"
            name = "Patient details"
            parent ="hospital_main_menu"
            sequence = "0"/>
    <menuitem id = "patient_menu"
            name = "Patient "
            action = "action_hospital"
            parent ="patient_details_menu"
            sequence = "0"       
            
            />
</odoo>

